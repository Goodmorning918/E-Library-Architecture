  shadowing false
}
skinparam rectangle<<Cart>> {
  BackgroundColor #2980b9
  FontColor #ffffff
  BorderColor #1c5981
  shadowing false
}
skinparam rectangle<<Finance>> {
  BackgroundColor #2980b9
  FontColor #ffffff
